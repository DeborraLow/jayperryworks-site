<section class="panel">
    <h1 class="panel-slug">Work</h1>
    <div class="l-wrapper">
        <ul class="gallery center">
            <% blog("work").articles.each do |print| %>
            <li class="gallery-item" data-year="<%= print.date.strftime('%Y') %>">
                <a href="<%= print.url %>"><img src="<%= print.url + print.data.cover %>" /></a>
            </li>
            <% end %>
        </ul>
    </div>
</section>

<section class="panel">
    <h1 class="panel-slug">Writing</h1>
    <ul class="feed">
        <% blog("writing").articles[0...5].each do |article| %>
        <li class="feed-item card horizontal l-wrapper narrow">
            <% link_to article.url, :class => "card-figure" do %>
                <img src="<%= article.url + article.data.image %>" alt="<%= article.title %>">
            <% end %>
            <div class="card-content">
                <h2><%= link_to article.title, article.url %></h2>
                <p class="subtitle cappa"><%= link_to article.data.subtitle, article.url %></p>
                <%= article.summary %>
                <%= link_to "Read more &rsaquo;", article.url, :class => "card-button" %>
            </div>
        </li>
        <% end %>
    </ul>
</section>
