---
title: home
---

<%= component "main_header", locals: {
  show_intro: true,
  intro: data.site.intro,
  status: data.site.status
} %>

<!-- Work section -->
<% component "panel", locals: { heading: "Recent work", id: "work", borders: "none" } do %>
  <div class="l-wrapper l-wrapper--wide l-margin-top-wide">
    <%= component "work_gallery", :locals => { :prints => blog("work").articles } %>

    <div class="t-centered l-margin-top-wide">
      <a class="button button--large" href="https://www.etsy.com/shop/jayperry" target="_blank">
        More prints available at <strong>Etsy</strong> &rsaquo;
      </a>
    </div>
  </div>
<% end %>

<!-- Blog section -->
<% if blog("writing").articles.length > 0 %>
  <% component "panel", locals: { heading: "Writing", id: "writing" } do %>
    <div class="l-wrapper">
      <%= component "writing_feed", :locals => { :articles => blog("writing").articles[0...5] } %>

      <% if blog("writing").articles.length > 5 %>
        <div class="l-margin-top-wide l-padding-top-wide border-top t-centered">
          <%= link_to "More writing &rsaquo;", "/writing.html", class: "button button--large" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
