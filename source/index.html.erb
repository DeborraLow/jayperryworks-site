---
title: home
---

<!-- Work section -->
<section class="panel">
    <h1 class="panel-slug">Work</h1>
    <div class="l-wrapper">
        <%= partial "layouts/partials/work" %>

        <div class="l-centered">
            <a class="button large l-has-margin top" href="https://www.etsy.com/shop/jayperry" target="_blank">More prints &amp; paintings available at <strong>Etsy</strong></a>
        </div>
    </div>
</section>

<!-- Blog section -->
<% if blog("writing").articles.length > 0 %>
<section class="panel">
    <h1 class="panel-slug">Writing</h1>
    <ul class="feed l-wrapper narrow">
        <% blog("writing").articles[0...5].each do |article| %>
        <li class="feed-item card horizontal">
            <% link_to article, :class => "card-figure" do %>
                <%= image_tag article.url + article.data.image, :alt => article.title %>
            <% end %>
            <div class="card-content">
                <h2 class="card-title"><%= link_to article.title, article %></h2>
                <% if article.data.subtitle.present? %>
                <%= link_to article.data.subtitle, article, :class => "card-subtitle cappa" %>
                <% end %>
                <%= article.summary %>
                <%= link_to "Read more &rsaquo;", article, :class => "card-button" %>
            </div>
        </li>
        <% end %>
    </ul>
</section>
<% end %>
