<% wrap_layout :layout do %>
    <article class="post">
            <header class="post-header">
                <h1><%= current_page.data.title %></h1>
                <span class="subtitle beta"><%= current_page.data.subtitle %></span>
            </header>
            <div class="post-content l-wrapper narrow">

                <aside class="post-meta">
                    <time><%= current_page.date.strftime("%B %-d, %Y") %></time>
                    <dl class="tags">
                        <dt class="tags-label">Filed under:</dt>
                        <% current_page.data.tags.each do |tag| %>
                        <dd class="tag"><a href=""><%= tag %></a></dd>
                        <% end %>
                    </dl>
                </aside>

                <% if current_page.data.image.present? %>
                    <%= image_tag current_page.url + current_page.data.image, :class => "post-feature_image" %>
                <% end %>

                <%= yield %>

        </div>
    </article>
    <nav class="pagination">
        <%= current_page.date %>
    </nav>
<% end %>
