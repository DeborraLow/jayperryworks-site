<% wrap_layout :layout do %>
  <%= component "main_header", locals: {
    theme: "reverse"
  } %>

  <article>
    <% component "panel", locals: { borders: "none", theme: "reverse" } do %>
      <%= image_tag current_page.url + current_page.data.cover, class: "cover", alt: current_page.data.title %>

      <!-- cover image, info, and title -->
      <div class="l-wrapper l-padding-top-wide t-centered">

        <%
          # if the painting has dimension metadata, add it to the format listing
          info = if current_page.data.width.present?
            "#{current_page.data.format}, #{current_page.data.width} &times; #{current_page.data.height}"
            else
              current_page.data.format
            end
        %>

        <h1 class="t-font-accent-bold t-scale-epsilon l-display-inline_block@xsmall"><%= current_page.data.title %></h1>
        <time class="t-font-accent t-scale-epsilon c-text-tertiary l-display-inline_block l-padding-left-narrow l-margin-left-narrow border-left"><%= current_page.date.strftime('%Y') %></time>
        <span class="t-font-accent t-scale-epsilon c-text-tertiary l-display-inline_block l-padding-left-narrow l-margin-left-narrow border-left"><%= info %></span>
      </div>
    <% end %>

    <% component "panel" do %>
      <!-- writeup -->
      <div class="content l-wrapper">
        <%= yield %>

        <!-- 'editions available on etsy' button -->
        <% if current_page.data.edition_placeholder == true %>
          <div class="t-centered l-margin-top-wide">
              <a class="button button--large" href="https://www.etsy.com/shop/jayperry" target="_blank">Print editions available at <strong>Etsy</strong></a>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Editions -->
    <% component "panel" do %>
      <h1 class="t-heading t-centered l-padding-bottom">Available editions</h1>
      <% if current_page.data.editions.present? %>
        <!-- edition cards -->
        <div class="l-wrapper l-wrapper--wide">
          <ul class="l-feed">
            <% current_page.data.editions.each do |edition| %>
              <%= component "print_edition", :locals => { :edition => edition } %>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>
  </article>

  <!-- More work -->
  <% component "panel", locals: { slug: "More work" } do %>
      <div class="l-wrapper l-wrapper--wide">
          <%= partial("components/work_gallery", :locals => { :prints => blog("work").articles, :current => false, :tags => false }) %>
      </div>
  <% end %>
<% end %>
