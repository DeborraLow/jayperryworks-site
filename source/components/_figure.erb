<%# --- Dependencies --- %>
<%# core/all.scss %>

<%# --- Locals --- %>
<%# source - REQUIRED %>
<% alt ||= "" %>

<% content_tag :figure, :class => 'feature' do %>
    <%= image_tag "#{source}", :class => 'feature-image', :alt => alt %>
    <% content_tag :figcaption, :class => "feature-caption" do %>
        <%= yield %>
    <% end %>
<% end %>
