<%#
  Main Footer component
  - lives at the bottom of each page

  Locals:
  BOOLEAN show_bio (optional): show the bio card? (only shown on interior pages, usually)

  Styles:
  components/card
  components/main_footer
%>

<% show_bio ||= false %>

<footer class="main_footer" role="contentinfo">
  <div class="l-wrapper">
    <% unless show_bio == false %>
      <% component "card", locals: {
        figure: "portrait.jpg",
        alt: "Jay Perry",
        multicolumn: true,
        classes: "l-margin-bottom-wide l-padding-bottom border-bottom"
      } do %>
        <p><%= data.site.bio_blurb %></p>
        <dl class="tag-group l-margin-top">
          <dt class="t-heading t-heading--slug t-scale-zeta l-margin-bottom-narrow c-text-tertiary">Say hi</dt>
          <% data.site.social.each do |site| %>
          <dd class="tag-group-item"><%= link_to site.name, site.link, class: "tag" %></dd>
          <% end %>
        </dl>
      <% end %>
    <% end %>
    <%= component "logo-jpw", locals: { classes: "main_footer-lockup logo logo--jpw" } %>
    <small class="main_footer-copyright">&copy; copyright <%= Time.now.year %> Jay Perry Works, all rights reserved.</small>
  </div>
</footer>
