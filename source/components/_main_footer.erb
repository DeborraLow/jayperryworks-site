<%#
  Main Footer component
  - lives at the bottom of each page

  Locals:
  BOOLEAN show_bio (optional): show the bio card? (only shown on interior pages, usually)

  Styles:
  components/card
  components/main_footer
%>

<% show_bio ||= false %>

<footer class="footer" role="contentinfo">
    <% unless show_bio == false %>
        <div class="card horizontal centered l-wrapper narrow l-margin bottom">
            <figure class="card-figure">
                <%= image_tag "portrait.jpg", :alt => "Jay Perry" %>
            </figure>
            <div class="card-content">
                <p><%= data.site.bio_blurb %></p>
                <dl class="tags">
                    <dt class="tags-label inline">Say hi</dt>
                    <% data.site.social.each do |site| %>
                    <dd><%= link_to site.name, site.link, :class => "tag" %></dd>
                    <% end %>
                </dl>
            </div>
        </div>
    <% end %>
    <div class="footer-section">
        <div class="l-wrapper narrow">
            <%= partial("components/logo-jpw", :locals => { :classes => "footer-logo" }) %>
            <small class="footer-copyright">&copy; copyright <%= Time.now.year %> Jay Perry Works, all rights reserved.</small>
            <!-- <a href="" class="footer-utility">Colophon</a> -->
        </div>
    </div>
</footer>
